{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "vinxi/types/client",
      "node"
    ],
    "isolatedModules": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "expose": [
        "./node_modules/threads/worker.d.ts"
      ]
    }
  }
}